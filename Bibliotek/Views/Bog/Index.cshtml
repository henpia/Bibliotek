@model IEnumerable<Bibliotek.Models.Bog>

@{
    ViewBag.Title = "Liste over Bøger";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Opret ny Bog", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beskrivelse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beskrivelse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageURL)
        </td>
        <td>
            @Html.ActionLink("Ret", "Edit", new { id=item.BogId }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.BogId }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.BogId })
        </td>
    </tr>
}

</table>
